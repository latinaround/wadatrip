{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]              // 👈 añade soporte para process/env
  },
  "include": ["src/**/*", "prisma/**/*", "seed.ts"],  // 👈 incluye prisma y seed
  "exclude": ["node_modules", "dist"]
}
