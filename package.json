{
  "name": "wadatrip",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "start:dev": "concurrently -k -n gw,it,pr,al \"yarn dev:gateway\" \"yarn dev:itineraries\" \"yarn dev:pricing\" \"yarn dev:alerts\"",
    "start:prod": "NODE_ENV=production GATEWAY_PORT=3000 node -r ts-node/register -r tsconfig-paths/register apps/gateway/src/main.ts",
    "dev:gateway": "cross-env TS_NODE_PROJECT=apps/gateway/tsconfig.json ts-node-dev -r tsconfig-paths/register --respawn --transpile-only apps/gateway/src/main.ts",
    "dev:itineraries": "cross-env TS_NODE_PROJECT=services/itineraries/tsconfig.json ts-node-dev -r tsconfig-paths/register --respawn --transpile-only services/itineraries/src/main.ts",
    "dev:pricing": "cross-env TS_NODE_PROJECT=services/pricing/tsconfig.json ts-node-dev -r tsconfig-paths/register --respawn --transpile-only services/pricing/src/main.ts",
    "dev:alerts": "cross-env TS_NODE_PROJECT=services/alerts/tsconfig.json ts-node-dev -r tsconfig-paths/register --respawn --transpile-only services/alerts/src/main.ts",
    "dev:provider-hub": "cross-env PORT=3014 TS_NODE_PROJECT=services/provider-hub/tsconfig.json ts-node-dev -r tsconfig-paths/register --respawn --transpile-only services/provider-hub/src/main.ts",
    "prisma:generate": "prisma generate --schema libs/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema libs/db/prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema libs/db/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema libs/db/prisma/schema.prisma",
    "seed": "cross-env TS_NODE_PROJECT=tsconfig.seed.json ts-node-dev --respawn --transpile-only libs/db/prisma/seed.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "smoke": "cross-env TS_NODE_PROJECT=tsconfig.seed.json ts-node-dev -r tsconfig-paths/register --transpile-only scripts/smoke.ts",
    "build": "prisma generate --schema=libs/db/prisma/schema.prisma && tsc -b apps/gateway services/alerts services/itineraries services/pricing",
    "start": "cross-env NODE_ENV=production node apps/gateway/dist/main.js",
    "postinstall": "prisma generate --schema=libs/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.16.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/swagger": "^7.1.18",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^6.16.2",
    "@wadatrip/service-alerts": "workspace:*",
    "@wadatrip/service-gateway": "workspace:*",
    "@wadatrip/service-itineraries": "workspace:*",
    "@wadatrip/service-pricing": "workspace:*",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.3.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "stripe": "11.1.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0"
  },
  "packageManager": "yarn@4.9.4",
  "prisma": {
    "seed": "ts-node libs/db/prisma/seed.ts"
  },
  "engines": {
    "node": ">=20.11.1"
  }
}
